{
  "family": "adotapet-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::040235854158:role/adotapet-ecs-task-exec-role",
  "taskRoleArn": "arn:aws:iam::040235854158:role/adotapet-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "040235854158.dkr.ecr.us-east-1.amazonaws.com/adotapet-api:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:DATABASE_URL::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:JWT_SECRET::"
        },
        {
          "name": "JWT_EXPIRES_IN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:JWT_EXPIRES_IN::"
        },
        {
          "name": "CLOUDINARY_CLOUD_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:CLOUDINARY_CLOUD_NAME::"
        },
        {
          "name": "CLOUDINARY_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:CLOUDINARY_API_KEY::"
        },
        {
          "name": "CLOUDINARY_API_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:CLOUDINARY_API_SECRET::"
        },
        {
          "name": "FRONTEND_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:040235854158:secret:adotapet/api-env-oVrY1R:FRONTEND_URL::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/adotapet-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "systemControls": []
    }
  ],
  "volumes": []
}
